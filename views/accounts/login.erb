<section class="site-content" style="padding-bottom: 202px;">

  <section class="sector--space lead--clear trim">
    <div class="gut trim">
      <h1>Login</h1>
    </div>
  </section>

  <section class="sector--space">
    <div class="gut">

      <form accept-charset="UTF-8" action="/accounts/login" id="new_login" method="post" novalidate="novalidate">

        <div class="district-set--small clear">

          <ul class="district-list list--layout">
            <li>
              <div class="district trim">
                <div class="field first">
                  <label for="email">Email</label>
                  <input id="email" name="account[email]" parsley-required="true" parsley-type="email" type="email" class="parsley-validated">
                </div>
                <div class="field">
                  <label for="password">Password</label>
                  <input id="password" name="account[password]" parsley-required="true" type="password" value="" class="parsley-validated">
                </div>
                <div class="field">
                  <div class="remember-me-wrap">
                    <div class="checkbox-wrap">
                      <input checked="checked" id="remember_me" name="remember_me" type="checkbox" value="1">
                    </div>
                    <label for="remember_me">Stay logged in</label>
                  </div>
                </div>
              </div>
            </li>
          </ul>

          <div class="group space--top--16">
            <div class="float--right">
              <button class="btn--green forward" name="button" type="submit">Log In</button>
            </div>
            <div class="float--left">
              <a class="btn--gray" href="/accounts/resetpassword">Reset password</a>
            </div>
          </div>

        </div>
      </form>
    </div>
  </section>

</section>
