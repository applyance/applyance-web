<section class="section is-gray">
  <div class="container">

    <h1>Register</h1>

    <form action="/accounts/register" method="post">

      <% if @errors %>
      <ul>
        <% @errors.each do |error| %>
        <li>
          <%= error %>
        </li>
        <% end %>
      </ul>
      <% end %>

      <ul>
        <li>
          <label for="name">Name</label>
          <input id="name" name="account[name]" type="text">
        </li>
        <li>
          <label for="entity-name">Entity Name</label>
          <input id="entity-name" name="entity[name]" type="text">
        </li>
        <li>
          <label for="email">Email</label>
          <input id="email" name="account[email]" type="email">
        </li>
        <li>
          <label for="password">Password</label>
          <input id="password" name="account[password]" type="password">
        </li>
      </ul>

      <div>
        <button type="submit">Create Account</button>
      </div>

    </form>

  </div>
</div>
